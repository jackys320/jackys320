@model WebApplication1.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <!-- 表單驗證     -->
    <script src="~/Scripts/jquery-2.0.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    @*
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    *@
</head>
<body>
    @using (Html.BeginForm("LoginFormsAuthCookie", "LoginFormsAuthentication", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <div class="form-horizontal">
            <div class="form-group">
                <div class="control-label col-md-3">
                    <h3>後台登入</h3>
                </div>
            </div>
            <hr />
            <div class="form-group">
                @Html.LabelFor(model => model.Account1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Account1, new { @class = "form-control", placeholder = "請輸入登入帳號" })
                    @Html.ValidationMessageFor(model => model.Account1, null, new { @class = "help-inline" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "請輸入登入密碼" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-inline" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    @Html.CheckBoxFor(model => model.Remember, new { @class = "form-control" })
                </div>
                @Html.LabelFor(model => model.Remember, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>

            <div class="form-group">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="登入" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>