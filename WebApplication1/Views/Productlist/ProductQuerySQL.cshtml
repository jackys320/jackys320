@model List<WebApplication1.Models.ProductQuerySQL>

@{
    //Layout = null;
    Layout = "~/Views/Home/Layout_mis.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <style>
        .pager {
            margin: 8px 3px;
            padding: 3px;
        }

            .pager .disabled {
                border: 1px solid #ddd;
                color: #999;
                margin-top: 4px;
                padding: 3px;
                text-align: center;
            }

            .pager .current {
                background-color: #6ea9bf;
                border: 1px solid #6e99aa;
                color: #fff;
                font-weight: bold;
                margin-top: 4px;
                padding: 3px 5px;
                text-align: center;
            }

            .pager span, .pager a {
                margin: 4px 3px;
            }

            .pager a {
                border: 1px solid #aaa;
                padding: 3px 5px;
                text-align: center;
                text-decoration: none;
            }

    </style>
</head>
<body>
    <div> 
        <h3>Search Product</h3>

        @using (Html.BeginForm("ProductQuerySQL", "Productlist", FormMethod.Post, new { id = "ProductList" }))
        {


                <table class="table">


                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayNameFor(modelItem => item.product_no)
                            </td>
                            <td>
                                @Html.DisplayNameFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayNameFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayNameFor(modelItem => item.product_type_name)
                            </td>
                            <td>
                                @Html.DisplayNameFor(modelItem => item.remark)
                            </td>
                        </tr>
                        break;
                    }

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.product_no)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.product_type_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.remark)
                            </td>
                            <td>
                                @Html.ActionLink("加入購物車", "AddInCart", new { id = item.product_no })
                            </td>
                        </tr>
                    }

                </table>

        }

    </div>
</body>
</html>
